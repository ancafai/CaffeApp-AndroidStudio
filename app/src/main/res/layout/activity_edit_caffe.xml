<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anca.caffeapp.EditCaffeActivity">

    <EditText
        android:id="@+id/editName"
        android:layout_width="189dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="41dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="189dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="address"
        android:inputType="textPostalAddress"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editName"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editName"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="192dp"
        android:layout_height="44dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="phone"
        android:inputType="phone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/editAddress"
        app:layout_constraintRight_toRightOf="@+id/editAddress"
        app:layout_constraintTop_toBottomOf="@+id/editAddress"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/butPlacePicker"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:onClick="goPlacePicker"
        android:text="Choose location"
        android:textSize="16dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/editAddress"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/editAddress"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editPhone"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginStart="85dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editButton"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="85dp" />



</android.support.constraint.ConstraintLayout>
